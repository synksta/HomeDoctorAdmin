        #         root.createBtn()

<MenuScreen>:
  name:'menuScreen'
  BoxLayout:
    orientation: 'vertical'
    size: root.width, root.height
    BoxLayout:
      size: .9, .9
      orientation: 'horizontal'
      Button:
        text: 'Симптомы'
      Button:
        text: 'Ключевые слова'
      Button:
        text: 'Пользователи'
    Button:
      size_hint: 1, .1
      text: 'Выйти'
      on_release:
        root.manager.transition.direction = "right"
        app.root.change_screen('loginScreen')

