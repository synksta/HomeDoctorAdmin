#:import utils kivy.utils
Manager:
    LoginScreen:
    
    ClientsTable:

<LoginScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 300
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        # elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
          id: welcome_label
          text: 'Привет!'
          font_size: 32
          valign: 'top'
          halign: 'center'
          size_hint: 1, None
          height: self.texture_size[1]
          # padding_y: 15

        MDTextField:
          id: user
          mode: 'round'
          hint_text: 'username'
          icon_right: 'account'
          size_hint_x: None
          width: 200
          font_size: 16
          pos_hint: {'center_x': 0.5}

        MDTextField:
          id: password
          mode: 'round'
          password: True
          hint_text: 'password'
          icon_right: 'form-textbox-password'
          size_hint_x: None
          width: 200
          font_size: 16
          pos_hint: {'center_x': 0.5}

        MDFillRoundFlatButton:
        # MDRaisedButton:
          text: 'Вход'
          pos_hint: {'center_x': 0.5}
          