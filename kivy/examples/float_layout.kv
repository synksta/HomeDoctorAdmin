#:import utils kivy.utils

<Button>
  font_size: 20
  size_hint: None, None
  height: 40
  width: 140

<MainLayout>
  FloatLayout:
    size: root.width, root.height
    
    Button:
      text: "Top Left"
      pos_hint: {'x': 0.0,'top': 1.0}

    Button:
      text: "Top Right"
      pos_hint: {'right': 1.0,'top': 1.0}

    Button:
      text: "Center"
      pos_hint: {'center_x': 0.5,'center_y': 0.5}

    Button:
      text: "Bottom Left"
      pos_hint: {'x': 0.0,'y': 0.0}
      
    Button:
      text: "Bottom Right"
      pos_hint: {'right': 1.0,'y': 0.0}

    Button:
      text: "Center Left"
      pos_hint: {'x': 0,'center_y': 0.5}

    Button:
      text: "Center Right"
      pos_hint: {'right': 1.0,'center_y': 0.5}
      
    Button:
      text: "Top Center"
      pos_hint: {'center_x': 0.5,'top': 1.0}
      
    Button:
      text: "Bottom Center"
      pos_hint: {'center_x': 0.5,'y': 0.0}  