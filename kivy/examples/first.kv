#:import utils kivy.utils

<MainGridLayout>

  name:name
  midname:midname
  surname:surname

  GridLayout:
    cols:1
    size: root.width, root.height

    GridLayout:
      cols:2

      Label:
        text: "Name"
      TextInput:
        id: name
        multiline:False

      Label:
        text: "Midname"
      TextInput:
        id: midname
        multiline:False

      Label:
        text: "Surname"
      TextInput:
        id: surname
        multiline:False

    Button:
      text: "Submit"
      font_size: 30
      on_press: root.press()
      background_normal: ''
      background_color: utils.get_color_from_hex('#a5d840')
