            MDTextField:
                id: searchField
                on_text: root.search(self.text)
                hint_text: "Поиск"
                icon_right: "magnify"
                mode: "round"        

<AddEditUserDialog_Content>
    orientation: "vertical"
    spacing: "2dp"
    size_hint_y: None
    height: '110dp'

    MDTextField:
        id: loginField
        hint_text: "Логин"

    MDTextField:
        id: passwordField
        hint_text: "Пароль"

<UsersScreen>:
    name: 'usersScreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: topBar
            left_action_items:
                [
                ['arrow-left', lambda x: app.root.change_screen_to_prev(), 'Назад'],
                ]
            right_action_items:
                [
                ['plus-circle', lambda x: root.dialog_add_user(), 'Добавить'],
                ['help', lambda x: root.dialog_help(), 'Помощь'],
                ]
            
        MDBoxLayout:
            padding: 10
            size_hint_y: 1
            id: table_place 

        InnerLayout:
            # size_hint_y: None
            adaptive_height: True
            orientation: 'horizontal'
            id: bottomBar
            MDTextField:
                id: searchField
                on_text: root.search(self.text)
                hint_text: "Поиск"
                icon_right: "magnify"
                mode: "round"
        
